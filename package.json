{
  "name": "skillscontroller-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Skills MCP Controller - Monorepo",
  "scripts": {
    "build": "pnpm --filter './packages/**' build",
    "build:shared": "pnpm --filter shared build",
    "build:mcp": "pnpm build:shared && pnpm --filter mcp-server build",
    "build:website": "pnpm build:shared && pnpm --filter website build",
    "dev": "pnpm --filter './packages/**' --parallel dev",
    "dev:mcp": "pnpm --filter mcp-server dev",
    "dev:website": "pnpm --filter website dev",
    "test": "pnpm --filter mcp-server test",
    "test:watch": "pnpm --filter mcp-server test --watch",
    "typecheck": "pnpm --filter './packages/**' typecheck",
    "clean": "pnpm --filter './packages/**' clean",
    "preinstall": "npx only-allow pnpm"
  },
  "keywords": [
    "claude",
    "claude-code",
    "skills",
    "mcp",
    "ai-tools",
    "model-context-protocol"
  ],
  "author": "marovole",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/marovole/skillscontroller.git"
  },
  "bugs": {
    "url": "https://github.com/marovole/skillscontroller/issues"
  },
  "homepage": "https://github.com/marovole/skillscontroller#readme",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  }
}
