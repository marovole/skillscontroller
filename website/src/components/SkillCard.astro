---
import type { Skill } from '../data/skills';

interface Props {
  skill: Skill;
}

const { skill } = Astro.props;
const sourceLabels = {
  anthropic: 'Anthropic',
  claudekit: 'ClaudeKit',
  community: '社区',
  composio: 'Composio',
  voltagent: 'VoltaAgent'
};
---

<div class="skill-card" data-category={skill.category.id}>
  <div class="skill-header">
    <span class="skill-icon">{skill.category.icon}</span>
    <div class="skill-meta">
      <h3 class="skill-name">{skill.name}</h3>
      <span class="skill-source">{sourceLabels[skill.source]}</span>
    </div>
  </div>

  <p class="skill-description">{skill.description}</p>

  <div class="skill-tags">
    {skill.triggers.slice(0, 4).map(trigger => (
      <span class="tag">{trigger}</span>
    ))}
  </div>

  <div class="skill-actions">
    <button
      class="btn btn-secondary btn-view"
      data-skill-id={skill.id}
      data-skill-name={skill.name}
      data-skill-description={skill.description}
      data-skill-triggers={skill.triggers.join(', ')}
    >
      查看详情
    </button>
    <button
      class="btn btn-primary btn-download"
      data-skill-id={skill.id}
      data-skill-name={skill.name}
    >
      下载
    </button>
  </div>
</div>

<style>
  .skill-card {
    padding: var(--spacing-md);
    background: var(--color-white);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    transition: all 0.2s;
    display: flex;
    flex-direction: column;
  }

  .skill-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-md);
  }

  .skill-header {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-sm);
  }

  .skill-icon {
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .skill-meta {
    flex: 1;
  }

  .skill-name {
    font-weight: 600;
    font-size: 1.125rem;
    margin-bottom: 0.25rem;
    color: var(--color-text);
  }

  .skill-source {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .skill-description {
    color: var(--color-text-secondary);
    font-size: 0.9375rem;
    margin-bottom: var(--spacing-sm);
    line-height: 1.5;
    flex: 1;
  }

  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
    margin-bottom: var(--spacing-md);
  }

  .tag {
    padding: 0.25rem 0.5rem;
    background: var(--color-bg-secondary);
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }

  .skill-actions {
    display: flex;
    gap: var(--spacing-xs);
  }

  .btn {
    flex: 1;
    padding: var(--spacing-xs) var(--spacing-sm);
    border-radius: var(--radius-sm);
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.2s;
    font-family: var(--font-sans);
    border: none;
  }

  .btn-view {
    background: transparent;
    color: var(--color-text);
    border: 1px solid var(--color-border);
  }

  .btn-view:hover {
    border-color: var(--color-text);
  }

  .btn-download {
    background: var(--color-primary);
    color: var(--color-white);
    border: 1px solid var(--color-primary);
  }

  .btn-download:hover {
    background: var(--color-primary-hover);
    border-color: var(--color-primary-hover);
  }
</style>
