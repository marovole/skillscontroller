        const { downloadSkillPack } = await import('../utils/packager');

        const pack = skillPackages.find(p => p.id === packId);
        if (pack) {
          const packSkills = skills.filter(s => pack.skills.includes(s.id));
          await downloadSkillPack(packSkills, pack.name);
        }

        button.textContent = 'âœ… å·²å¯åŠ¨ä¸‹è½½';
