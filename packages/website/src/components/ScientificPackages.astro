<script>
  // å¤„ç†å¥—ä»¶ä¸‹è½½
  document.querySelectorAll('.btn-download-pack').forEach(btn => {
    btn.addEventListener('click', async (e) => {
      const packId = (e.target as HTMLElement).dataset.packId;
      if (!packId) return;

      const button = e.target as HTMLButtonElement;
      const originalText = button.textContent;
      button.textContent = 'ä¸‹è½½ä¸­...';
      button.disabled = true;

      try {
        // åŠ¨æ€å¯¼å…¥ä¸‹è½½å·¥å…·
        const { skillPackages } = await import('../data/packages');
        const { skills } = await import('../data/skills');
        const { downloadSkillPack } = await import('../utils/packager');

        const pack = skillPackages.find(p => p.id === packId);
        if (pack) {
          const packSkills = skills.filter(s => pack.skills.includes(s.id));
          await downloadSkillPack(
            packSkills.map(s => ({
              id: s.id,
              name: s.name,
              content: s.content
            })),
            pack.name
          );
        }

        button.textContent = 'å·²ä¸‹è½½!';
        setTimeout(() => {
          button.textContent = originalText;
          button.disabled = false;
        }, 2000);
      } catch (error) {
        console.error('Download failed:', error);
        button.textContent = 'ä¸‹è½½å¤±è´¥';
        setTimeout(() => {
          button.textContent = originalText;
          button.disabled = false;
        }, 2000);
      }
    });
  });
</script>
